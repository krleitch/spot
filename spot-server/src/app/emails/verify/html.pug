doctype html

html(lang='en')
    head
        meta(name='viewport', content='width=device-width')
        meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
        title Welcome to Spot
        style(type='text/css').
            * {
                margin: 0;
                font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
                box-sizing: border-box;
            }
            body {
                -webkit-font-smoothing: antialiased;
                -webkit-text-size-adjust: none;
                width: 100% !important;
                height: 100%;
                line-height: 1.6em;
            }
            /* -------------------------------
            CONTAINER
            -------------------------------- */
            .container {
                display: flex;
                flex-flow: column;
                justify-content: center;
                align-items: center;
                background-color: #EEEEEE;
                margin: 12px;
                width: 50%;
                min-width: 300px;
            }

            /* -------------------------------
            TITLE
            -------------------------------- */
            .title {
                font-size: 32px;
                margin: 12px;
                text-align: center;
            }
            .highlight {
                color: #00BFA5;
                margin-left: 6px;
            }

            /* -------------------------------
            BAR
            -------------------------------- */
            .bar {
                display: flex;
                justify-content: center;
                min-width: 300px;
                width: 80%;
                border-bottom: 1px solid black;
            }

            /* -------------------------------
            LINKS
            -------------------------------- */
            .link {
                display: flex;
                justify-content: center;
                margin: 12px;
            }
            a {
                color: #9E9E9E;
                text-decoration: none;
            }
            a:hover {
                text-decoration: underline;
            }

    body

        div.container

            div.title
                span.text Welcome to
                span.highlight Spot

            div.bar

            div.link
                a(href=`${link}`) Click to verify your account
